{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2015",

    "paths": {
      "@/*": ["src/*"],
      "@lib/*": ["src/lib/*"],
      "@shared/*": ["src/shared/*"],
    },

    "outDir": "./dist/",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "noEmit": false,
  },
  "include": ["./src", "./src/custom.d.ts"]
}
